<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="9dp"
    android:layout_marginBottom="9dp"
    android:background="@android:color/white"
    android:foreground="?android:attr/selectableItemBackground"
    card_view:cardCornerRadius="3dp"
    card_view:cardElevation="2dp">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="5dp"
        android:paddingEnd="10dp"
        android:paddingLeft="13dp"
        android:paddingRight="5dp"
        android:paddingStart="13dp"
        android:paddingTop="5dp">

        <com.olympics.olympicsandroid.view.customView.GothamBookTextView
            android:id="@+id/id_unit_title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:textColor="@color/event_title_color"
            android:textSize="12dp" />

        <com.olympics.olympicsandroid.view.customView.GothamBookTextView
            android:id="@+id/id_unit_scheduled_time"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:layout_below="@id/id_unit_title"
            android:textColor="@color/event_title_color"
            android:textSize="12dp" />

        <ImageView
            android:id="@+id/id_medal_image"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:paddingLeft="15dp"
            android:paddingRight="10dp"
            android:layout_toRightOf="@id/id_unit_title"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/id_schedule_image"
            android:src="@drawable/schedule_small"
            android:layout_width="40dp"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/id_medal_image"
            android:layout_alignParentRight="true" />

    </RelativeLayout>
</android.support.v7.widget.CardView>